/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "@myrmidon/cadmus-codicology-ui": [
        "./dist/myrmidon/cadmus-codicology-ui"
      ],
      "@myrmidon/cadmus-part-codicology-bindings": [
        "./dist/myrmidon/cadmus-part-codicology-bindings"
      ],
      "@myrmidon/cadmus-part-codicology-contents": [
        "./dist/myrmidon/cadmus-part-codicology-contents"
      ],
      "@myrmidon/cadmus-part-codicology-decorations": [
        "./dist/myrmidon/cadmus-part-codicology-decorations"
      ],
      "@myrmidon/cadmus-part-codicology-edits": [
        "./dist/myrmidon/cadmus-part-codicology-edits"
      ],
      "@myrmidon/cadmus-part-codicology-hands": [
        "./dist/myrmidon/cadmus-part-codicology-hands"
      ],
      "@myrmidon/cadmus-part-codicology-layouts": [
        "./dist/myrmidon/cadmus-part-codicology-layouts"
      ],
      "@myrmidon/cadmus-part-codicology-material-dsc": [
        "./dist/myrmidon/cadmus-part-codicology-material-dsc"
      ],
      "@myrmidon/cadmus-part-codicology-pg": [
        "./dist/myrmidon/cadmus-part-codicology-pg"
      ],
      "@myrmidon/cadmus-part-codicology-sheet-labels": [
        "./dist/myrmidon/cadmus-part-codicology-sheet-labels"
      ],
      "@myrmidon/cadmus-part-codicology-shelfmarks": [
        "./dist/myrmidon/cadmus-part-codicology-shelfmarks"
      ],
      "@myrmidon/cadmus-part-codicology-watermarks": [
        "./dist/myrmidon/cadmus-part-codicology-watermarks"
      ]
    },
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022"
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
